{
  "version": 2,
  "builds": [
    {
      "src": "www/next.config.js",
      "use": "@now/next"
    },
    {
      "src": "api/signup",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/www/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ]
}